<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jake.weatherandroidapp.activity.DetailPlan">

    <CalendarView
        android:layout_width="320dp"
        android:layout_height="264dp"
        android:id="@+id/calendarView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_detail_plan"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_detail_plan"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_detail_plan"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_detail_plan"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <GridView
        android:layout_width="378dp"
        android:layout_height="246dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_detail_plan"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        app:layout_constraintRight_toRightOf="@+id/activity_detail_plan"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_detail_plan"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>
